<%- include ("../include/_header.ejs") %>

<!--main site--> 
<main id="site-main">
    <div class="container">
        <h2 class="text-center text-dark"> GESTÃO DE USUÁRIOS</h2>
        <div class=" d-flex justify-btween">
         <a href="/add_user" class="border-shadow btn btn-success">
          <span class="text-gradient">Novo Usuário <i class="fas fa-user"></i></span>   

         </a>   
        </div><br>
        <form action="/" method="POST">
            <table class="table">
                <thead class="thead-dark">
                    <tr>
                        <th>ID</th>
                        <th>Nome</th>
                        <th>Email</th>
                        <th>Sexo</th>
                        <th>Status</th>
                        <th>Action</th>
    
                    </tr>
    
                </thead>
                <tbody>
                    <% for(var i=0;i<users.length; i++) {%>
                    <tr>
                        <td><%=i+1 %></td>
                        <td><%=users[i].name %></td>
                        <td><%=users[i].email %></td>
                        <td><%=users[i].genero %></td>
                        <td><%=users[i].status %></td>
                        <td>
                            <a href="/edit_user?id=<%=users[i]._id%>" class="btn border-shadow update">
                            <span class="text-gradient"><i class="fas fa-pencil-alt">Editar</i></span>
                            </a>
                            <a href="" class="btn border-shadow delete">
                            <span class="text-gradient"><i class="fa-solid fa-info">Detalhe</i></span>
                            </a>
                        </td>
                    </tr>
                    <%} %>
                </tbody>
            </table>
        </form>
    </div>
</main>
<%- include ("../include/_footer.ejs") %>